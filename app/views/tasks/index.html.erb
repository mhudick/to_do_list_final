<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <%= form_for :task do |f| %>
  <p>

    <label for="task_name">Name of task to add</label><br>
    <input id="task_name" name="task[name]" type="text" /><input name="commit" type="submit" value="Add task" style=float: right; />
  </p>

<% end %>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to 'Done', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>
